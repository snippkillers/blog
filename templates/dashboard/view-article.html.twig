{% extends 'base.html.twig' %}

{% block title %}
  Liste des produits
{% endblock %}

{% block body %}
  <main>
    <section>
      <img src="{{ asset('img/bandeau.svg') }}" alt="bandeau" />
      <div class="card-section">
        <div class="container">
          <div class="row">
            <div class="col-md-12">
              <div class="img-article">
                <h2 class="card-title">
                  {{ article.title }}
                </h2>
                <img src="{{ article.image }}" class="card-img-top" alt="..." />
              </div>
            </div>

            <div class="col-md-12">
              <div class="card card-descript">
                <div class="card-body">
                  <p class="card-text">
                    {{ article.content }}.
                  </p>

                  <a href="{{
                    path(
                      'modified-article',
                      {
                        id: article.id
                      }
                    )
                    }}"
                    class="btn btn-primary lien">
                    Modifier l'article
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <div class="row mt-2">
      <div class="col-md-12">
        <h3>
          Commentaires :
        </h3>
        <a href="{{
          path(
            'create-comment-article',
            {
              id: article.id
            }
          )
          }}">
          Ajouter un commentaire
        </a>
      </div>

      {% for comment in article.comments %}
        <div class="col-md-12 mt-2">
          <div class="card">
            <div class="card-body">
              {{ comment.content }}
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </main>
{% endblock %}
