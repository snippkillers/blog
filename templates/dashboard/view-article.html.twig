{% extends 'base.html.twig' %}

{% block title %}
  Liste des produits
{% endblock %}

{% block body %}
  <main>
    <section>
      <img src="{{ asset('img/bandeau.svg') }}" alt="bandeau" />
      <div class="card-section">
        <div class="container">
          <div class="row">
            <div class="col-md-12">
              <div class="img-article">
                <h2 class="card-title">
                  {{ article.title }}
                </h2>
                <img src="{{ article.image }}" class="card-img-top" alt="..." />
              </div>
            </div>

            <div class="col-md-12">
              <div class="card card-descript">
                <div class="card-body">
                  <p class="card-text">
                    {{ article.content }}.
                  </p>

                  <a href="{{
                    path(
                      'modified-article',
                      {
                        id: article.id
                      }
                    )
                    }}"
                    class="btn btn-primary lien">
                    Modifier l'article
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section>
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            {# {{ form_start(formAddcomment) }}

                        {{ form_row(formAddcomment.title, {'attr': {'placeholder': 'Nom du Produit'}}) }}

                        {{ form_row(formAddcomment.content, {'attr': {'placeholder': 'Description du Produit'}}) }}

                        <button type="submit" class="btn btn-success">Laisser un avis
                        </button>

                        {{ form_end(formAddcomment) }}

                    {% endblock %} #}
          </div>
        </div>
      </div>
    </section>
  </main>
{% endblock %}
