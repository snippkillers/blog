{% extends 'base.html.twig' %}

{% block title %}Ajouter un commentaire{% endblock %}

{% block body %}
    <h1>Ajouter un commentaire</h1>

    <div class="row justify-content-center">
        <div class="col-md-7">

            {{ form_start(commentForm) }}

            {{ form_row(commentForm.content, {label: 'Commentaire :', attr: {placeholder: 'Donnez votre avis !'}}) }}
            {{ form_row(commentForm.add, {attr: {class: 'btn btn-success'}}) }}

            {{ form_end(commentForm) }}

        </div>
    </div>
{% endblock %}