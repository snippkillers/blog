{% extends 'base.html.twig' %}

{% block title %}Modifier un article{% endblock %}

{% block body %}

    <section class="create-article modified-article">
        <img src="{{ asset('img/bandeau.svg') }}" alt="bandeau"/>
        <h1>Modification d'un article</h1>

        {% if is_granted('ROLE_BO') %}

            <div class="container-fuild">
                <div class="row">
                    <div class="col-md-4 offset-md-1">
                        {{ form_start(formAddArticle) }}

                        <p>Nom de l'article</p>
                        {{ form_row(formAddArticle.title, {'attr': {'placeholder': "Nom de l'article"}}) }}

                        <p>Image de l'article</p>
                        {{ form_row(formAddArticle.image, {'attr': {'placeholder': "URL de l'image"}}) }}

                        <p>Catégories de l'article</p>
                    {{ form_row(formAddArticle.class, {'attr': {'placeholder': "Catégorie de l'article"}}) }}
                    </div>


                <div class="col-md-5 offset-md-1">
                    <p>Description</p>
                    {{ form_row(formAddArticle.content, {'attr': {'placeholder': "Résumé de l'article"}}) }}
                    
                    <button type="submit" class="btn btn-secondary">
                        Enregistrer dans brouillons</button>
                    <button value="true" name="published" type="submit" class="btn btn-success">
                        Publier l'article
                    </button>
                </div>


                </div>

            </div>
        </div>
        {{ form_end(formAddArticle) }}

    {% else %}

        <p>Vous n'avez pas l'accès</p>

    {% endif %}

</section>

{% endblock %}