        <script type="text/javascript">
        var $grid = $('.end-content-project').isotope({
        itemSelector: '.square-project',
        layoutMode: 'fitRows',
        });
        
        
        $('.content-filter-project').on('click', 'button', function() {
        var filterValue = $(this).attr('data-filter');
        $grid.isotope({
        filter: filterValue
      });
    });

    </script>

        
